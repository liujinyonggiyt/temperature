<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ljy.view.activity.CalculateActivity">

    <ljy.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ljy.widget.TitleBar>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/layout1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_cal_add"
            android:text="添加"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="水位："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_cal_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="岸边系数："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_cal_anbian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_cal_cal"
            android:text="计算"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_cal_init"
            android:text="初始化数据"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="350dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <TableLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/tablelayout_cal"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:stretchColumns="*"
                android:gravity="center">
                <TableRow>
                    <TextView
                        android:text=""/>//删除
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="序号"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="点号"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="速度（m/s）" />
                    <TextView
                        android:text="起点距（m）"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:text="水深（m）"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </TableRow>

            </TableLayout>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/linearlayout_cal_liuliang"
        android:orientation="horizontal">
        <TextView
            android:text="流量： "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_cal_liuliang"
            android:text="0"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=" m3/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/linearlayout_cal_waterwide"
        android:orientation="horizontal">
        <TextView
            android:text="水面宽： "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_cal_waterwide"
            android:text="0"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text=" m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
